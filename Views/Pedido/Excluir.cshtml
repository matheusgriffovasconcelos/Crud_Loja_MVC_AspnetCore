@model PedidoModel

<h2>Exclusão de Pedido</h2>
<hr>
<h3>Deseja realmente excluir o pedido
    <span class="text-danger">@Model.Id.ToString("D6")</span>?
</h3>
<form method="post" asp-action="ProcessarExclusao" class="mt-3">
    <input type="hidden" asp-for="@Model.Id">
    <p>
        <a asp-action="Index"><button type="button" class="btn btn-success">Não</button></a>

        <input type="submit" value="Sim" class="btn btn-danger">
    </p>
</form>
@model ItemPedidoModel

<h2>Cadastro de Item do Pedido <span class="text-primary">@Model.IdPedido.ToString("D6")</span>
</h2>
<hr>
<form method="post">
    <input type="hidden" asp-for="@Model.IdPedido">

    <div class="form-floating mb-4">
        <select asp-for="@Model.IdProduto" asp-items="@ViewBag.Produtos" class="form-select">
            <option value="">Selecione o produto...</option>
        </select>
        <label asp-for="@Model.IdProduto"></label>
        <span class="text-danger" asp-validation-for="@Model.IdProduto"></span>
    </div>

    <div class="form-floating mb-3">
        <input type="number" class="form-control" placeholder="ItemPedido" asp-for="@Model.Quantidade">
        <label asp-for="@Model.Quantidade"></label><br>
        <span class="text-danger" asp-validation-for="@Model.Quantidade"></span>
    </div>

    <p>
        <a asp-action="Index" asp-route-idPedido="@Model.IdPedido"><button type="button" class="btn btn-secondary">Cancelar</button></a>

        <input type="submit" value="Salvar" class="btn btn-primary">
    </p>
</form>
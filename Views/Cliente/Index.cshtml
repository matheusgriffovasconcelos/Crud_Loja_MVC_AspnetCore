@model IEnumerable<ClienteModel>
<link rel="stylesheet" href="~/css/tabelas.css">

<div class="container">
    <header class="d-flex justify-content-between align-tems-center">
        <div>
            <h2 class="text-primary">Listagem de Clientes</h2>
        </div>
        <div>
             <a asp-action="Cadastrar" class="btn btn-primary"><i class="bi bi-plus"></i> Novo Cliente</a>
        </div>
    </header>
    <hr>

    @if (Model.Count() > 0)
    {
        <div class="container">
            <table class="table table-striped tabela-usuarios table-sm table-hover">
                <thead class="bg-dark bg-gradient text-white">
                    <tr>
                        <th>Nome</th>
                        <th>E-mail</th>
                        <th>Telefone</th>
                        <th>DataNascimento</th>
                        <th>Dependentes</th>
                        <th>Crédito</th>
                        <th>VIP</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cliente in Model)
                    {
                        <tr>
                            <td>@cliente.Nome</td>
                            <td>@cliente.Email</td>
                            <td>@cliente.Telefone</td>
                            <td>@cliente.DataNascimento.ToShortDateString()</td>
                            <td>@cliente.Dependentes.ToString("D1")</td>
                            <td>@cliente.LimiteCredito.ToString("C")</td>
                            <td>@(cliente.Vip ? "Sim" : "Não")</td>
                            <td>
                                <a asp-action="Alterar" asp-route-id="@cliente.Id" class="btn btn-sm btn-success">
                                    <i class="bi bi-pencil" title="Alterar"></i> </a>
                                <a asp-action="Excluir" asp-route-id="@cliente.Id" class="btn btn-sm btn-danger"> 
                                <i class="bi bi-trash" title="Excluir"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p>Não há nenhum Cliente Cadastrado.</p>
    }
</div>
